<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".presentation.PresentationActivity">

    <ImageView
        android:id="@+id/presentation_placeholder"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/athlete_placeholder_green" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/presentation_response"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/presentation_placeholder"
        android:layout_centerInParent="true"
        android:layout_marginTop="100dp"
        android:layout_marginHorizontal="40dp"
        android:gravity="center"
        android:text="result"
        android:textSize="24sp"
        android:textColor="@color/black" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="40dp"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/presentation_nuovaricerca"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="10dp"
            android:backgroundTint="@color/green"
            android:text="@string/new_research"
            android:textColor="@color/white" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/presentation_confronta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/green"
            android:text="@string/compare"
            android:textColor="@color/white" />

    </LinearLayout>


</RelativeLayout>